@model Assignment.Models.Request

<form class="card p-3 bg-light" asp-controller="Request" asp-action="MakeRequest" method="post">
    <h3 class="text text-primary">Request for a new category</h3>
    <div class="form-group">
        <label class="text text-success form-control">Name</label>
        <input name="CategoryName" class="form-control" />
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Make Requset" />
    </div>
</form>